{
  "name": "dnd_character_app",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && yarn start",
    "migrate": "cd engine && yarn migrate:latest",
    "seed": "cd engine && yarn seed:run",
    "server": "nodemon",
    "build": "cd client && yarn && craco build",
    "start": "node engine/dist/index.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn migrate\" \"yarn seed\" \"yarn client\""
  },
  "dependencies": {
    "@craco/craco": "^6.1.2",
    "nodemon": "^2.0.7",
    "tailwindcss": "tailwindcss@npm:@tailwindcss/postcss7-compat @tailwindcss/postcss7-compat postcss@^7 autoprefixer@^9",
    "typescript": "^4.2.2"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "stylelint-config-recommended": "^5.0.0"
  },
  "private": true,
  "heroku-postbuild": "cd engine yarn && yarn migrate:latest && yarn seed:run",
  "engines": {
    "yarn": "1.19.1",
    "node": ">=12"
  },
  "engineStrict" : true
}
